	keywords = {animal behavior, decision-making, neural circuit models, phototaxis},
	file = {Full Text PDF:/home/ljp/Zotero/storage/DZHAANUD/Karpenko et al. - 2020 - From behavior to circuit modeling of light-seeking.pdf:application/pdf}
}

