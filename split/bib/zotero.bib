	langid = {english},
	pmid = {12736343},
	note = {Publisher: Society for Neuroscience
Section: {ARTICLE}},
	keywords = {behavior, Danio rerio, {GFP}, laser ablation, optokinetic, optomotor, retina, retinal ganglion cell, sonic hedgehog, superior colliculus, tectum, transgenic, vision, visual system, zebrafish},
	file = {Snapshot:/home/ljp/Zotero/storage/JK2LGB7P/3726.html:text/html;Full Text PDF:/home/ljp/Zotero/storage/JKM8ZB54/Roeser and Baier - 2003 - Visuomotor Behaviors in Larval Zebrafish after GFP.pdf:application/pdf}
